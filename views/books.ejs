<%- include('layouts/header'); -%>

<main class="main">
    <h2>List of books (<%= model.length %>)</h2>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th class="d-print-none">
                        <a class="btn btn-sm btn-success" href="/create">Add</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% for (const book of model) { %>
                    <tr>
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td><%= book.price %></td>
                        <td><%= book.category %></td>
                        <td class="button">
                            <a class="btn btn-sm btn-warning" href="/edit/<%= book.id %>">Edit</a>
                            <a class="btn btn-sm btn-danger" href="/delete/<%= book.id %>">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</main>

<%- include('layouts/footer'); -%>