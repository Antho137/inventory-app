<%- include('layouts/header') -%>

<main class="main">
    <h2>Update a record</h2>
    <form action="/edit/<%= model.id %>" method="post">
        <div class="form-horizontal">
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="title">Title</label>
                <div class="col-sm-8">
                    <input autofocus class="form-control" name="title" value="<%= model.title %>" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="author">Author</label>
                <div class="col-sm-8">
                    <input class="form-control" name="author" value="<%= model.author %>" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="price">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" name="price" value="<%= model.price %>" />
                </div>
            </div>        
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="category">Category</label>
                <div class="col-sm-8">
                    <input class="form-control" name="category" value="<%= model.category %>" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2"></label>
                <div class="col-sm-8">
                    <button type="submit" class="btn btn-default btn-warning">Update</button>
                    <a class="btn btn-outline-dark cancel" href="/books">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</main>

<%- include('layouts/footer') -%>